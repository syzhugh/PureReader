<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_video_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_video_bottom" />

    <LinearLayout
        android:id="@id/fragment_video_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/fragment_video_daily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/video_bottom_daily"
            android:textColor="@drawable/video_bottom_textcolor" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#848383" />

        <TextView
            android:id="@+id/fragment_video_findmore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/video_bottom_findmore"
            android:textColor="@drawable/video_bottom_textcolor" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#848383"

            />

        <TextView
            android:id="@+id/fragment_video_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/video_bottom_fav"
            android:textColor="@drawable/video_bottom_textcolor" />

    </LinearLayout>

</RelativeLayout>